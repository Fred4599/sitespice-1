---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Our Services - Website Design, SEO & Graphic Design | SiteSpice" description="Explore SiteSpice services: custom website design, SEO & internet marketing, and graphic design. Comprehensive digital solutions that drive real business results.">
  <!-- Hero Video Background -->
  <div class="fixed inset-0 -z-30 w-full h-full overflow-hidden pointer-events-none">
    <video 
      id="services-hero-video"
      autoplay 
      loop 
      muted 
      playsinline 
      preload="none"
      class="w-full h-full object-cover opacity-20 mix-blend-screen" 
      style="filter: hue-rotate(150deg) contrast(1.2);">
      <source src="https://cdn.coverr.co/videos/coverr-digital-lines-moving-background-4770/1080p.mp4" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-gradient-to-b from-black via-black/80 to-black"></div>
  </div>

  <!-- Background Gradient -->
  <div class="fixed inset-0 -z-20 bg-gradient-to-b from-purple-900/5 via-black to-black pointer-events-none"></div>

  <!-- Technical Grid Overlay -->
  <div class="fixed inset-0 pointer-events-none z-0 technical-grid opacity-30"></div>

  <!-- Vertical Structure Lines -->
  <div class="fixed inset-0 pointer-events-none z-0 max-w-[1400px] mx-auto border-x border-white/[0.04]">
    <div class="absolute left-1/4 h-full w-px bg-white/[0.02]"></div>
    <div class="absolute left-2/4 h-full w-px bg-white/[0.02]"></div>
    <div class="absolute left-3/4 h-full w-px bg-white/[0.02]"></div>
  </div>

  <Navigation />

  <main class="z-10 relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6">
      <div class="max-w-[1400px] mx-auto">
        <div class="text-center mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out forwards;">
          <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 border border-white/10 rounded-full bg-white/5">
            <div class="w-1.5 h-1.5 bg-purple-400 rounded-full animate-pulse"></div>
            <span class="text-[10px] font-mono text-purple-300 uppercase tracking-widest">
              Our Services
            </span>
          </div>
          <h1 class="text-6xl md:text-8xl font-bold mb-8 bg-gradient-to-r from-white via-purple-200 to-white bg-clip-text text-transparent leading-[0.9]">
            What We Do
          </h1>
          <p class="text-neutral-300 text-xl md:text-2xl max-w-3xl mx-auto leading-relaxed">
            From beautiful websites to strategic SEO and stunning graphic design—we deliver comprehensive digital solutions that drive real business results.
          </p>
        </div>
      </div>
    </section>

    <!-- Main Services Grid -->
    <section class="py-20 px-6">
      <div class="max-w-[1400px] mx-auto">
        <div class="grid md:grid-cols-3 gap-px bg-white/10 border border-white/10 overflow-hidden spotlight-grid">
          <!-- Website Design -->
          <a href="/website-design" class="group bg-black p-10 md:p-12 hover:bg-neutral-900/40 transition-colors relative spotlight-card cursor-pointer">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="inline-flex items-center gap-2 px-3 py-1 mb-6 border border-white/10 rounded-full bg-white/5 text-[10px] font-mono text-purple-300 uppercase tracking-widest">
                Service 01
              </div>
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:bezier-curve-light" width="48"></iconify-icon>
              </div>
              <h2 class="text-3xl font-bold text-white mb-4 group-hover:text-purple-200 transition-colors">Website Design</h2>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Beautiful, functional websites that work hard for your business. Custom designs that capture attention and drive conversions.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Custom Design
                </li>
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  User Experience
                </li>
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Responsive Layout
                </li>
              </ul>
              <div class="flex items-center gap-2 text-purple-400 font-medium group-hover:gap-4 transition-all">
                <span>Learn More</span>
                <iconify-icon icon="ph:arrow-right" width="20"></iconify-icon>
              </div>
            </div>
          </a>

          <!-- Internet Marketing -->
          <a href="/internet-marketing" class="group bg-black p-10 md:p-12 hover:bg-neutral-900/40 transition-colors relative spotlight-card cursor-pointer">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="inline-flex items-center gap-2 px-3 py-1 mb-6 border border-white/10 rounded-full bg-white/5 text-[10px] font-mono text-purple-300 uppercase tracking-widest">
                Service 02
              </div>
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:chart-line-up-light" width="48"></iconify-icon>
              </div>
              <h2 class="text-3xl font-bold text-white mb-4 group-hover:text-purple-200 transition-colors">Internet Marketing</h2>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Drive targeted traffic that converts. Strategic SEO and data-driven marketing that gets you seen by the right audience.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  SEO Services
                </li>
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Data-Driven Strategy
                </li>
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Campaign Management
                </li>
              </ul>
              <div class="flex items-center gap-2 text-purple-400 font-medium group-hover:gap-4 transition-all">
                <span>Learn More</span>
                <iconify-icon icon="ph:arrow-right" width="20"></iconify-icon>
              </div>
            </div>
          </a>

          <!-- Graphic Design -->
          <a href="/graphic-design" class="group bg-black p-10 md:p-12 hover:bg-neutral-900/40 transition-colors relative spotlight-card cursor-pointer">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="inline-flex items-center gap-2 px-3 py-1 mb-6 border border-white/10 rounded-full bg-white/5 text-[10px] font-mono text-purple-300 uppercase tracking-widest">
                Service 03
              </div>
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:palette-light" width="48"></iconify-icon>
              </div>
              <h2 class="text-3xl font-bold text-white mb-4 group-hover:text-purple-200 transition-colors">Graphic Design</h2>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Visual storytelling that captures attention. Stunning graphics that communicate your message and leave lasting impressions.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Brand Identity
                </li>
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Visual Storytelling
                </li>
                <li class="flex items-center gap-3 text-sm text-neutral-500 group-hover:text-neutral-300 transition-colors">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Web Hosting
                </li>
              </ul>
              <div class="flex items-center gap-2 text-purple-400 font-medium group-hover:gap-4 transition-all">
                <span>Learn More</span>
                <iconify-icon icon="ph:arrow-right" width="20"></iconify-icon>
              </div>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Why SiteSpice Section -->
    <section class="py-20 px-6 border-t border-white/5">
      <div class="max-w-[1200px] mx-auto">
        <div class="text-center mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.3s forwards; animation-play-state: paused;">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">Why Choose SiteSpice?</h2>
          <p class="text-neutral-400 text-lg">What makes us different from other agencies.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 spotlight-grid">
          <!-- Personal Service -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 spotlight-card relative animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.4s forwards; animation-play-state: paused;">
            <div class="relative z-10">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center mb-6">
                <iconify-icon icon="ph:handshake-light" class="text-3xl text-white"></iconify-icon>
              </div>
              <h3 class="text-2xl font-bold mb-4">Personal Service</h3>
              <p class="text-neutral-300 leading-relaxed">
                You work directly with Braydon—no offshore teams, no endless handoffs. Just personal, dedicated service from someone who genuinely cares about your success.
              </p>
            </div>
          </div>

          <!-- All-In Approach -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 spotlight-card relative animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.5s forwards; animation-play-state: paused;">
            <div class="relative z-10">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center mb-6">
                <iconify-icon icon="ph:poker-chip-light" class="text-3xl text-white"></iconify-icon>
              </div>
              <h3 class="text-2xl font-bold mb-4">All-In Approach</h3>
              <p class="text-neutral-300 leading-relaxed">
                We don't believe in tiered packages that limit results. We go all-in with comprehensive solutions at a single flat rate because we believe in your success.
              </p>
            </div>
          </div>

          <!-- Real Results -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 spotlight-card relative animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.6s forwards; animation-play-state: paused;">
            <div class="relative z-10">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center mb-6">
                <iconify-icon icon="ph:chart-line-light" class="text-3xl text-white"></iconify-icon>
              </div>
              <h3 class="text-2xl font-bold mb-4">Real Results</h3>
              <p class="text-neutral-300 leading-relaxed">
                We focus on delivering measurable business results—not just pretty designs. Every decision is backed by strategy, data, and a commitment to your growth.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Process Section -->
    <section class="py-20 px-6">
      <div class="max-w-[1200px] mx-auto">
        <div class="text-center mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.7s forwards; animation-play-state: paused;">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">How We Work</h2>
          <p class="text-neutral-400 text-lg">Our proven process for delivering exceptional results.</p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <!-- Step 1 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.8s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">01</div>
            <h3 class="text-xl font-semibold mb-3">Discovery</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We start by understanding your business, goals, and challenges.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.9s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">02</div>
            <h3 class="text-xl font-semibold mb-3">Strategy</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We develop a comprehensive plan tailored to your specific needs.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 1s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">03</div>
            <h3 class="text-xl font-semibold mb-3">Execution</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We bring your vision to life with expert design and development.
            </p>
          </div>

          <!-- Step 4 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 1.1s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">04</div>
            <h3 class="text-xl font-semibold mb-3">Growth</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We optimize and scale your success with ongoing support.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonial Callout -->
    <section class="py-20 px-6">
      <div class="max-w-[900px] mx-auto">
        <div class="backdrop-blur-xl bg-gradient-to-br from-purple-500/10 to-purple-700/5 border border-purple-500/20 rounded-3xl p-12 md:p-16 text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 1.2s forwards; animation-play-state: paused;">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center mx-auto mb-6">
            <iconify-icon icon="ph:quotes" class="text-4xl text-white"></iconify-icon>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Built for Business Owners</h2>
          <p class="text-neutral-300 text-lg leading-relaxed max-w-2xl mx-auto">
            "I've worked with business professionals who often say, <span class="text-white font-semibold">'I'm just not techy.'</span> I want to eliminate that mindset. We make digital marketing simple, effective, and results-driven."
          </p>
          <p class="text-purple-300 font-semibold mt-6">— Braydon Carter, Founder</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-32 px-6">
      <div class="max-w-[900px] mx-auto text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 1.3s forwards; animation-play-state: paused;">
        <h2 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-white via-purple-200 to-white bg-clip-text text-transparent">
          Ready to Grow Your Business?
        </h2>
        <p class="text-neutral-300 text-xl mb-12 leading-relaxed">
          Let's create a digital strategy that drives real results for your business.
        </p>
        <a 
          href="/contact" 
          class="shiny-cta inline-block magnetic-btn"
        >
          Get Started Today
        </a>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<script>
  // Lazy load video only when visible - removed forced 500ms timeout for better performance
  if ('IntersectionObserver' in window) {
    const videoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const video = entry.target as HTMLVideoElement;
          video.preload = 'auto';
          video.load();
          videoObserver.unobserve(video);
        }
      });
    }, { rootMargin: '100px' });
    
    const servicesVideo = document.getElementById('services-hero-video');
    if (servicesVideo) {
      videoObserver.observe(servicesVideo);
    }
  }
</script>
