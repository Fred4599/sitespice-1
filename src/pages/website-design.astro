---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Website Design Services - SiteSpice | Custom Web Design Meridian Idaho">
  <!-- Hero Video Background -->
  <div class="fixed inset-0 -z-30 w-full h-full overflow-hidden pointer-events-none">
    <video 
      id="service-hero-video"
      autoplay 
      loop 
      muted 
      playsinline 
      preload="none"
      class="w-full h-full object-cover opacity-20 mix-blend-screen" 
      style="filter: hue-rotate(150deg) contrast(1.2);">
      <source src="https://cdn.coverr.co/videos/coverr-digital-lines-moving-background-4770/1080p.mp4" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-gradient-to-b from-black via-black/80 to-black"></div>
  </div>

  <!-- Background Gradient -->
  <div class="fixed inset-0 -z-20 bg-gradient-to-b from-purple-900/5 via-black to-black pointer-events-none"></div>

  <!-- Technical Grid Overlay -->
  <div class="fixed inset-0 pointer-events-none z-0 technical-grid opacity-30"></div>

  <!-- Vertical Structure Lines -->
  <div class="fixed inset-0 pointer-events-none z-0 max-w-[1400px] mx-auto border-x border-white/[0.04]">
    <div class="absolute left-1/4 h-full w-px bg-white/[0.02]"></div>
    <div class="absolute left-2/4 h-full w-px bg-white/[0.02]"></div>
    <div class="absolute left-3/4 h-full w-px bg-white/[0.02]"></div>
  </div>

  <Navigation />

  <main class="z-10 relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6">
      <div class="max-w-[1400px] mx-auto">
        <div class="mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out forwards;">
          <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 border border-white/10 rounded-full bg-white/5">
            <iconify-icon icon="ph:bezier-curve-light" class="text-purple-400"></iconify-icon>
            <span class="text-[10px] font-mono text-purple-300 uppercase tracking-widest">
              Service 01
            </span>
          </div>
          <h1 class="text-6xl md:text-8xl font-bold mb-8 bg-gradient-to-r from-white via-purple-200 to-white bg-clip-text text-transparent leading-[0.9]">
            Website<br/>Design
          </h1>
          <p class="text-neutral-300 text-xl md:text-2xl max-w-3xl leading-relaxed">
            Beautiful, functional websites that don't just look good—they work hard for your business. We create custom digital experiences that capture attention and drive results.
          </p>
        </div>
      </div>
    </section>

    <!-- What We Deliver Section -->
    <section class="py-20 px-6">
      <div class="max-w-[1400px] mx-auto">
        <div class="mb-16">
          <div class="text-[10px] font-mono text-neutral-500 uppercase mb-4">
            What We Deliver
          </div>
          <h2 class="text-4xl md:text-5xl font-medium tracking-tight text-white max-w-2xl leading-[1.05]">
            More than pretty pixels.
            <br>
            <span class="text-neutral-600">Strategic design</span>
            that converts.
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-px bg-white/10 border border-white/10 overflow-hidden spotlight-grid">
          <!-- Custom Design -->
          <div class="group bg-black p-10 hover:bg-neutral-900/40 transition-colors relative spotlight-card animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.2s forwards; animation-play-state: paused;">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:paint-brush-light" width="48"></iconify-icon>
              </div>
              <h3 class="text-2xl font-medium text-white mb-4">Custom Design</h3>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Every business is unique. We craft custom designs tailored to your brand, your audience, and your goals—never a cookie-cutter template.
              </p>
              <ul class="space-y-3 text-sm text-neutral-500">
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Brand-aligned aesthetics
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Modern, professional layouts
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Strategic color & typography
                </li>
              </ul>
            </div>
          </div>

          <!-- User Experience -->
          <div class="group bg-black p-10 hover:bg-neutral-900/40 transition-colors relative spotlight-card animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.3s forwards; animation-play-state: paused;">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:user-focus-light" width="48"></iconify-icon>
              </div>
              <h3 class="text-2xl font-medium text-white mb-4">User Experience</h3>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Beautiful means nothing if users can't navigate. We design intuitive experiences that guide visitors exactly where they need to go.
              </p>
              <ul class="space-y-3 text-sm text-neutral-500">
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Intuitive navigation structure
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Clear call-to-actions
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Conversion-optimized flows
                </li>
              </ul>
            </div>
          </div>

          <!-- Responsive Layout -->
          <div class="group bg-black p-10 hover:bg-neutral-900/40 transition-colors relative spotlight-card animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.4s forwards; animation-play-state: paused;">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:devices-light" width="48"></iconify-icon>
              </div>
              <h3 class="text-2xl font-medium text-white mb-4">Responsive Layout</h3>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Your customers browse on phones, tablets, and desktops. Your site works flawlessly on every device, every time.
              </p>
              <ul class="space-y-3 text-sm text-neutral-500">
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Mobile-first approach
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Cross-browser compatible
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Lightning-fast load times
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="py-20 px-6 border-t border-white/5">
      <div class="max-w-[1200px] mx-auto">
        <div class="text-center mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.5s forwards; animation-play-state: paused;">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">Our Process</h2>
          <p class="text-neutral-400 text-lg">From concept to launch, we're with you every step.</p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <!-- Step 1 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.6s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">01</div>
            <h3 class="text-xl font-semibold mb-3">Discovery</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We dive deep into your business, audience, and goals to understand exactly what you need.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.7s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">02</div>
            <h3 class="text-xl font-semibold mb-3">Design</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We create mockups and prototypes that bring your vision to life before any code is written.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.8s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">03</div>
            <h3 class="text-xl font-semibold mb-3">Development</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              Clean, modern code that's fast, secure, and built to scale with your business growth.
            </p>
          </div>

          <!-- Step 4 -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-8 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.9s forwards; animation-play-state: paused;">
            <div class="text-6xl font-bold text-purple-500/20 mb-4">04</div>
            <h3 class="text-xl font-semibold mb-3">Launch</h3>
            <p class="text-neutral-400 text-sm leading-relaxed">
              We handle deployment, testing, and optimization to ensure a smooth, successful launch.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-20 px-6">
      <div class="max-w-[900px] mx-auto">
        <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-3xl p-12 md:p-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 1s forwards; animation-play-state: paused;">
          <h2 class="text-4xl font-bold mb-8">Why Work With SiteSpice?</h2>
          
          <div class="space-y-6 text-neutral-300 leading-relaxed">
            <p class="text-lg">
              Most agencies hand you a template and call it custom. Others focus on beauty but forget functionality. 
              <span class="text-white font-semibold">We do both.</span>
            </p>
            <p>
              When you work with SiteSpice, you're working directly with Braydon—no offshore teams, no endless handoffs. 
              Just personal, dedicated service from someone who genuinely cares about your success.
            </p>
            <p>
              We don't believe in tiered packages that limit what we can achieve. We go all-in, delivering websites that look stunning 
              <span class="text-purple-300 font-semibold">and</span> drive real business results.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-32 px-6">
      <div class="max-w-[900px] mx-auto text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 1.1s forwards; animation-play-state: paused;">
        <h2 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-white via-purple-200 to-white bg-clip-text text-transparent">
          Ready for a Website That Works?
        </h2>
        <p class="text-neutral-300 text-xl mb-12 leading-relaxed">
          Let's create something beautiful that drives real results for your business.
        </p>
        <a 
          href="https://sitespice.com/contact/" 
          class="shiny-cta inline-block magnetic-btn"
        >
          Get Started
        </a>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<script>
  // Lazy load video
  if ('IntersectionObserver' in window) {
    const videoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const video = entry.target as HTMLVideoElement;
          video.preload = 'auto';
          video.load();
          videoObserver.unobserve(video);
        }
      });
    }, { rootMargin: '50px' });
    
    const serviceVideo = document.getElementById('service-hero-video');
    if (serviceVideo) {
      videoObserver.observe(serviceVideo);
      setTimeout(() => {
        const vid = serviceVideo as HTMLVideoElement;
        if (vid.preload === 'none') {
          vid.preload = 'auto';
          vid.load();
        }
      }, 500);
    }
  }
</script>
