---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Graphic Design Services - SiteSpice | Brand Design Meridian Idaho">
  <!-- Hero Video Background -->
  <div class="fixed inset-0 -z-30 w-full h-full overflow-hidden pointer-events-none">
    <video 
      id="service-hero-video"
      autoplay 
      loop 
      muted 
      playsinline 
      preload="none"
      class="w-full h-full object-cover opacity-20 mix-blend-screen" 
      style="filter: hue-rotate(150deg) contrast(1.2);">
      <source src="https://cdn.coverr.co/videos/coverr-digital-lines-moving-background-4770/1080p.mp4" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-gradient-to-b from-black via-black/80 to-black"></div>
  </div>

  <!-- Background Gradient -->
  <div class="fixed inset-0 -z-20 bg-gradient-to-b from-purple-900/5 via-black to-black pointer-events-none"></div>

  <!-- Technical Grid Overlay -->
  <div class="fixed inset-0 pointer-events-none z-0 technical-grid opacity-30"></div>

  <!-- Vertical Structure Lines -->
  <div class="fixed inset-0 pointer-events-none z-0 max-w-[1400px] mx-auto border-x border-white/[0.04]">
    <div class="absolute left-1/4 h-full w-px bg-white/[0.02]"></div>
    <div class="absolute left-2/4 h-full w-px bg-white/[0.02]"></div>
    <div class="absolute left-3/4 h-full w-px bg-white/[0.02]"></div>
  </div>

  <Navigation />

  <main class="z-10 relative">
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6">
      <div class="max-w-[1400px] mx-auto">
        <div class="mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out forwards;">
          <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 border border-white/10 rounded-full bg-white/5">
            <iconify-icon icon="ph:palette-light" class="text-purple-400"></iconify-icon>
            <span class="text-[10px] font-mono text-purple-300 uppercase tracking-widest">
              Service 03
            </span>
          </div>
          <h1 class="text-6xl md:text-8xl font-bold mb-8 bg-gradient-to-r from-white via-purple-200 to-white bg-clip-text text-transparent leading-[0.9]">
            Graphic<br/>Design
          </h1>
          <p class="text-neutral-300 text-xl md:text-2xl max-w-3xl leading-relaxed">
            Your brand is your story told visually. We create stunning graphic designs that capture attention, communicate your message, and leave lasting impressions.
          </p>
        </div>
      </div>
    </section>

    <!-- What We Deliver Section -->
    <section class="py-20 px-6">
      <div class="max-w-[1400px] mx-auto">
        <div class="mb-16">
          <div class="text-[10px] font-mono text-neutral-500 uppercase mb-4">
            What We Deliver
          </div>
          <h2 class="text-4xl md:text-5xl font-medium tracking-tight text-white max-w-2xl leading-[1.05]">
            Visual storytelling
            <br>
            <span class="text-neutral-600">that connects</span>
            and converts.
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-px bg-white/10 border border-white/10 overflow-hidden spotlight-grid">
          <!-- Brand Identity -->
          <div class="group bg-black p-10 hover:bg-neutral-900/40 transition-colors relative spotlight-card animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.2s forwards; animation-play-state: paused;">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:fingerprint-light" width="48"></iconify-icon>
              </div>
              <h3 class="text-2xl font-medium text-white mb-4">Brand Identity</h3>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Stand out from the competition with a cohesive brand identity that tells your unique story and resonates with your audience.
              </p>
              <ul class="space-y-3 text-sm text-neutral-500">
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Logo design & branding
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Color palettes & typography
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Brand guidelines & assets
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Business cards & stationery
                </li>
              </ul>
            </div>
          </div>

          <!-- Visual Storytelling -->
          <div class="group bg-black p-10 hover:bg-neutral-900/40 transition-colors relative spotlight-card animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.3s forwards; animation-play-state: paused;">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:images-light" width="48"></iconify-icon>
              </div>
              <h3 class="text-2xl font-medium text-white mb-4">Visual Storytelling</h3>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Engage your audience with compelling graphics that communicate complex ideas simply and beautifully.
              </p>
              <ul class="space-y-3 text-sm text-neutral-500">
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Social media graphics
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Infographics & data visualization
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Marketing materials & ads
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Presentation design
                </li>
              </ul>
            </div>
          </div>

          <!-- Web Hosting -->
          <div class="group bg-black p-10 hover:bg-neutral-900/40 transition-colors relative spotlight-card animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.4s forwards; animation-play-state: paused;">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-purple-500/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="mb-8 text-neutral-700 group-hover:text-purple-400 transition-colors">
                <iconify-icon icon="ph:cloud-light" width="48"></iconify-icon>
              </div>
              <h3 class="text-2xl font-medium text-white mb-4">Web Hosting</h3>
              <p class="text-neutral-400 mb-6 leading-relaxed">
                Fast, secure, reliable hosting that keeps your website online and performing at its best 24/7.
              </p>
              <ul class="space-y-3 text-sm text-neutral-500">
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  99.9% uptime guarantee
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  SSL certificates included
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Daily backups & security
                </li>
                <li class="flex items-center gap-3">
                  <div class="w-1.5 h-1.5 rounded-full bg-purple-500"></div>
                  Technical support
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Design Philosophy -->
    <section class="py-20 px-6 border-t border-white/5">
      <div class="max-w-[900px] mx-auto">
        <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-3xl p-12 md:p-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.5s forwards; animation-play-state: paused;">
          <div class="flex items-center gap-3 mb-8">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center">
              <iconify-icon icon="ph:lightbulb-light" class="text-2xl text-white"></iconify-icon>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold">Our Design Philosophy</h2>
          </div>
          
          <div class="space-y-6 text-neutral-300 leading-relaxed text-lg">
            <p>
              Great design isn't just about making things look pretty. It's about <span class="text-white font-semibold">solving problems</span> and <span class="text-white font-semibold">communicating clearly.</span>
            </p>
            <p>
              Every color, font, image, and layout choice serves a purpose—to guide your audience, reinforce your message, and drive action. 
              We believe design should be <span class="text-purple-300 font-semibold">intentional, authentic, and aligned with your goals.</span>
            </p>
            <p>
              Whether you're building a brand from scratch or refreshing your existing identity, we create designs that don't just look good—they <span class="text-white font-semibold">work.</span>
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Design Services Grid -->
    <section class="py-20 px-6">
      <div class="max-w-[1200px] mx-auto">
        <div class="text-center mb-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.6s forwards; animation-play-state: paused;">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">What We Design</h2>
          <p class="text-neutral-400 text-lg">From logos to landing pages, we've got you covered.</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Logo Design -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-6 group hover:border-purple-500/30 transition-all animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.7s forwards; animation-play-state: paused;">
            <iconify-icon icon="ph:stamp-light" class="text-4xl text-purple-400 mb-4"></iconify-icon>
            <h3 class="text-lg font-semibold mb-2">Logo Design</h3>
            <p class="text-neutral-400 text-sm">Memorable logos that represent your brand identity</p>
          </div>

          <!-- Social Graphics -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-6 group hover:border-purple-500/30 transition-all animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.75s forwards; animation-play-state: paused;">
            <iconify-icon icon="ph:share-network-light" class="text-4xl text-purple-400 mb-4"></iconify-icon>
            <h3 class="text-lg font-semibold mb-2">Social Media</h3>
            <p class="text-neutral-400 text-sm">Eye-catching graphics optimized for social platforms</p>
          </div>

          <!-- Marketing Materials -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-6 group hover:border-purple-500/30 transition-all animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.8s forwards; animation-play-state: paused;">
            <iconify-icon icon="ph:megaphone-light" class="text-4xl text-purple-400 mb-4"></iconify-icon>
            <h3 class="text-lg font-semibold mb-2">Marketing Materials</h3>
            <p class="text-neutral-400 text-sm">Flyers, brochures, and promotional designs</p>
          </div>

          <!-- Infographics -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-6 group hover:border-purple-500/30 transition-all animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.85s forwards; animation-play-state: paused;">
            <iconify-icon icon="ph:chart-pie-light" class="text-4xl text-purple-400 mb-4"></iconify-icon>
            <h3 class="text-lg font-semibold mb-2">Infographics</h3>
            <p class="text-neutral-400 text-sm">Complex data visualized in engaging formats</p>
          </div>

          <!-- Print Design -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-6 group hover:border-purple-500/30 transition-all animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.9s forwards; animation-play-state: paused;">
            <iconify-icon icon="ph:printer-light" class="text-4xl text-purple-400 mb-4"></iconify-icon>
            <h3 class="text-lg font-semibold mb-2">Print Design</h3>
            <p class="text-neutral-400 text-sm">Business cards, letterheads, and branded materials</p>
          </div>

          <!-- Presentations -->
          <div class="backdrop-blur-xl bg-white/[0.02] border border-white/[0.08] rounded-2xl p-6 group hover:border-purple-500/30 transition-all animate-on-scroll" style="animation: animationIn 0.8s ease-out 0.95s forwards; animation-play-state: paused;">
            <iconify-icon icon="ph:presentation-light" class="text-4xl text-purple-400 mb-4"></iconify-icon>
            <h3 class="text-lg font-semibold mb-2">Presentations</h3>
            <p class="text-neutral-400 text-sm">Professional slide decks that impress</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Design + Strategy -->
    <section class="py-20 px-6">
      <div class="max-w-[900px] mx-auto">
        <div class="backdrop-blur-xl bg-gradient-to-br from-purple-500/10 to-purple-700/5 border border-purple-500/20 rounded-3xl p-12 md:p-16 animate-on-scroll" style="animation: animationIn 0.8s ease-out 1s forwards; animation-play-state: paused;">
          <h2 class="text-4xl font-bold mb-6 text-center">Design + Strategy = Results</h2>
          <div class="space-y-6 text-neutral-300 leading-relaxed">
            <p class="text-lg">
              What separates good design from great design? <span class="text-white font-semibold">Strategy.</span>
            </p>
            <p>
              We don't just make things look good—we design with purpose. Every element is crafted to support your business objectives, 
              whether that's building brand recognition, driving conversions, or establishing authority in your industry.
            </p>
            <p class="text-center text-purple-300 font-semibold text-xl pt-4">
              Beautiful. Intentional. Effective.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-32 px-6">
      <div class="max-w-[900px] mx-auto text-center animate-on-scroll" style="animation: animationIn 0.8s ease-out 1.1s forwards; animation-play-state: paused;">
        <h2 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-white via-purple-200 to-white bg-clip-text text-transparent">
          Ready to Elevate Your Brand?
        </h2>
        <p class="text-neutral-300 text-xl mb-12 leading-relaxed">
          Let's create stunning visuals that capture attention and drive results for your business.
        </p>
        <a 
          href="https://sitespice.com/contact/" 
          class="shiny-cta inline-block magnetic-btn"
        >
          Get Started
        </a>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<script>
  // Lazy load video
  if ('IntersectionObserver' in window) {
    const videoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const video = entry.target as HTMLVideoElement;
          video.preload = 'auto';
          video.load();
          videoObserver.unobserve(video);
        }
      });
    }, { rootMargin: '50px' });
    
    const serviceVideo = document.getElementById('service-hero-video');
    if (serviceVideo) {
      videoObserver.observe(serviceVideo);
      setTimeout(() => {
        const vid = serviceVideo as HTMLVideoElement;
        if (vid.preload === 'none') {
          vid.preload = 'auto';
          vid.load();
        }
      }, 500);
    }
  }
</script>
