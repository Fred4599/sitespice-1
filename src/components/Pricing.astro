---

<section class="py-32 bg-black border-b border-white/5 relative">
  <div class="max-w-[1400px] mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-end mb-20">
      <div>
        <div class="text-[10px] font-mono text-neutral-500 uppercase mb-4">
          07 â€” Investment
        </div>
        <h2 class="text-4xl font-medium tracking-tight text-white">
          Transparent Protocols
        </h2>
      </div>
      
      <div class="flex items-center gap-3 mt-6 md:mt-0">
        <span class="text-xs font-medium text-white">Monthly</span>
        <div class="toggle-switch active" onclick="this.classList.toggle('active')"></div>
        <span class="text-xs font-medium text-neutral-500">Quarterly <span class="text-purple-500 text-[10px] ml-1">-20%</span></span>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Card 1 -->
      <div class="p-8 border border-white/10 bg-white/[0.02] hover:bg-white/[0.04] transition-colors flex flex-col justify-between group">
        <div>
          <div class="flex justify-between items-start mb-6">
            <div>
              <h3 class="text-lg font-medium text-white">Audit</h3>
              <p class="text-xs text-neutral-500 mt-1">Single Sprint</p>
            </div>
            <iconify-icon icon="ph:lightning-light" class="text-neutral-600 text-xl"></iconify-icon>
          </div>
          <div class="mb-8">
            <span class="text-4xl font-medium tracking-tighter text-white">$4,500</span>
            <span class="text-xs text-neutral-500 font-mono">/one-off</span>
          </div>
          <div class="space-y-4 mb-8">
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>UX/UI Heuristic Analysis</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Performance Report</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Conversion Strategy</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Figma Delivery</span>
            </div>
          </div>
        </div>
        <button class="w-full py-3 border border-white/10 text-[11px] font-mono uppercase tracking-widest text-neutral-400 hover:text-white hover:border-white transition-colors">
          Start Audit
        </button>
      </div>

      <!-- Card 2 (Highlighted) -->
      <div class="p-8 border border-purple-500/30 pricing-highlight flex flex-col justify-between relative group">
        <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-purple-900/50 border border-purple-500/30 rounded-full backdrop-blur-md">
          <span class="text-[10px] font-mono text-purple-400 uppercase tracking-widest">Recommended</span>
        </div>
        <div>
          <div class="flex justify-between items-start mb-6">
            <div>
              <h3 class="text-lg font-medium text-white">Product Partner</h3>
              <p class="text-xs text-neutral-500 mt-1">Recurring Ops</p>
            </div>
            <iconify-icon icon="ph:star-four-fill" class="text-purple-500 text-xl"></iconify-icon>
          </div>
          <div class="mb-8">
            <span class="text-4xl font-medium tracking-tighter text-white">$8,500</span>
            <span class="text-xs text-neutral-500 font-mono">/mo</span>
          </div>
          <div class="space-y-4 mb-8">
            <div class="flex items-center gap-3 text-sm text-white">
              <iconify-icon icon="ph:check-circle-fill" class="text-purple-500"></iconify-icon>
              <span>Unlimited Design Requests</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-white">
              <iconify-icon icon="ph:check-circle-fill" class="text-purple-500"></iconify-icon>
              <span>Frontend Dev (React/Webflow)</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-white">
              <iconify-icon icon="ph:check-circle-fill" class="text-purple-500"></iconify-icon>
              <span>Slack Connect Channel</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-white">
              <iconify-icon icon="ph:check-circle-fill" class="text-purple-500"></iconify-icon>
              <span>48h Turnaround Time</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-white">
              <iconify-icon icon="ph:check-circle-fill" class="text-purple-500"></iconify-icon>
              <span>Pause Anytime</span>
            </div>
          </div>
        </div>
        <button class="w-full py-3 bg-white text-black text-[11px] font-bold uppercase tracking-widest hover:bg-neutral-200 transition-colors">
          Subscribe Now
        </button>
      </div>

      <!-- Card 3 -->
      <div class="p-8 border border-white/10 bg-white/[0.02] hover:bg-white/[0.04] transition-colors flex flex-col justify-between group">
        <div>
          <div class="flex justify-between items-start mb-6">
            <div>
              <h3 class="text-lg font-medium text-white">Scale</h3>
              <p class="text-xs text-neutral-500 mt-1">Enterprise</p>
            </div>
            <iconify-icon icon="ph:buildings-light" class="text-neutral-600 text-xl"></iconify-icon>
          </div>
          <div class="mb-8">
            <span class="text-4xl font-medium tracking-tighter text-white">Custom</span>
            <span class="text-xs text-neutral-500 font-mono">/quote</span>
          </div>
          <div class="space-y-4 mb-8">
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Full Design System</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Dedicated Squad (3+)</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Priority Support</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-neutral-400">
              <iconify-icon icon="ph:check" class="text-white"></iconify-icon>
              <span>Legal & SLA Contracts</span>
            </div>
          </div>
        </div>
        <button class="w-full py-3 border border-white/10 text-[11px] font-mono uppercase tracking-widest text-neutral-400 hover:text-white hover:border-white transition-colors">
          Contact Sales
        </button>
      </div>
    </div>
  </div>
</section>
