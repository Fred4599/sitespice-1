<section class="max-w-[1400px] mx-auto px-6 pb-24 md:pb-40 pt-10 md:pt-20 border-b border-white/5">
  <div class="max-w-5xl">
    <div class="inline-flex items-center gap-3 px-3 py-1.5 mb-10 border border-white/10 rounded-full bg-white/5 backdrop-blur-sm animate-on-scroll [animation:animationIn_0.8s_ease-out_0.2s_both]">
      <div class="flex items-center gap-2 px-1">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-purple-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-purple-500"></span>
        </span>
        <span class="text-[10px] font-mono text-purple-400 uppercase tracking-widest" data-scramble="true">
          Ready to Serve
        </span>
      </div>
      <div class="h-3 w-px bg-white/10"></div>
      <span class="text-[10px] text-neutral-400 font-mono">Meridian, ID</span>
    </div>

    <h1 class="animate-on-scroll [animation:animationIn_0.8s_ease-out_0.3s_both] text-5xl md:text-8xl lg:text-[7rem] font-medium tracking-tighter text-white leading-[0.9] mb-12">
      Marketing Agency
      <br>
      <span class="text-transparent bg-clip-text bg-gradient-to-b from-white via-neutral-200 to-neutral-600">
        Meridian Idaho
      </span>
    </h1>

    <div class="flex flex-col md:flex-row md:items-end justify-between gap-12 animate-on-scroll [animation:animationIn_0.8s_ease-out_0.4s_both]">
      <p class="text-lg text-neutral-400 max-w-xl leading-relaxed font-light">
        Our mission is simple: deliver marketing solutions that highlight your brand, 
        connect with your audience, and drive real results.
      </p>

      <div class="flex items-center gap-6">
        <a href="https://sitespice.com/contact/" class="group relative px-8 py-4 bg-white text-black text-xs font-bold tracking-widest uppercase overflow-hidden hover:bg-neutral-200 transition-all duration-300 magnetic-btn">
          <span class="relative z-10 flex items-center gap-2">
            Contact Us
            <iconify-icon icon="ph:arrow-right" class="group-hover:translate-x-1 transition-transform"></iconify-icon>
          </span>
          <div class="absolute inset-0 bg-neutral-100 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left mix-blend-difference"></div>
        </a>
        <div class="h-px w-12 bg-white/20"></div>
        <span class="text-[10px] font-mono text-neutral-500">
          SCROLL TO EXPLORE
        </span>
      </div>
    </div>
  </div>
</section>
