<section class="sm:py-24 [animation:fadeSlideIn_0.8s_ease-out_0.1s_both] animate-on-scroll animate pt-16 pb-16 border-b border-white/5 bg-black overflow-hidden"
  data-element-locator="html > body:nth-of-type(1) > div:nth-of-type(1) > section:nth-of-type(5)">
  <div class="mb-12 text-center">
    <p class="text-xs uppercase text-neutral-500 tracking-widest mb-2 font-mono">
      Featured Reviews
    </p>
    <h2 class="text-3xl md:text-5xl font-medium tracking-tighter text-white leading-[0.9] whitespace-nowrap">
        See What 
        <span class="text-transparent bg-clip-text bg-gradient-to-br from-white via-neutral-200 to-neutral-500">
          They Say
        </span>
      </h2>
  </div>

  <!-- Scrollable testimonials container -->
  <div class="relative py-8 sm:py-12">
    <!-- Fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-16 sm:w-32 bg-gradient-to-r from-black to-transparent z-10 pointer-events-none"></div>
    <div class="absolute right-0 top-0 bottom-0 w-16 sm:w-32 bg-gradient-to-l from-black to-transparent z-10 pointer-events-none"></div>
    
    <!-- Scrollable area -->
    <div class="overflow-x-auto scrollbar-hide px-6 sm:px-12" style="-webkit-overflow-scrolling: touch;">
      <div class="flex gap-6 py-8" style="width: max-content; padding-left: 2rem; padding-right: 2rem;">
        
        <!-- Testimonial 1 -->
        <div class="flex-shrink-0 w-[320px] sm:w-[360px]">
          <div class="h-full rounded-2xl bg-gradient-to-b from-white/10 to-transparent border border-white/10 backdrop-blur-xl p-1 shadow-2xl hover:border-purple-500/30 transition-all duration-300">
            <div class="h-full rounded-xl bg-white text-neutral-900 p-6">
              <div class="inline-flex items-center justify-center h-10 w-10 rounded-xl bg-purple-100 ring-1 ring-purple-200 mb-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"
